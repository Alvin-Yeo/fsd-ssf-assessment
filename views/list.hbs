<header>
    <div class="container">
        <div class="row mt-3">
            <div class="col d-flex justify-content-between">
                <h1>Letter {{ letter }}</h1>
                <div class="align-self-center">
                    <a href="/" class="btn btn-primary">Home</a>
                </div>
            </div>
        </div>
    </div>
</header>

<main>
    <div class="container">
        <div class="row mt-3">
            <div class="col">
                {{#if hasContent}}
                <ul class="books_list">
                    {{#each books}}
                    <li><a href="/book/{{ this.book_id }}">{{ this.title }}</a></li>
                    {{/each}}
                </ul>
                <div>
                    <form action="" method="GET">
                        <div  class="d-flex justify-content-between">
                            <button class="btn btn-primary">Previous</button>
                            <button class="btn btn-primary">Next</button>
                        </div>
                    </form>
                </div>
                {{else}}
                    <p>No result found.</p>
                {{/if}}
            </div>
        </div>
    </div>
</main>