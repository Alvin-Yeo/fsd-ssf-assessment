<header>
    <div class="container">
        <div class="row mt-3">
            <div class="col d-flex justify-content-between">
                <h1>Letter {{ letter }}</h1>
                <div class="align-self-center">
                    <a href="/" class="btn btn-primary">Home</a>
                </div>
            </div>
        </div>
    </div>
</header>

<main>
    <div class="container">
        <div class="row mt-3">
            <div class="col">
                {{#if hasContent}}
                <ul class="books_list">
                    {{#each books}}
                    <li><a href="/book/{{ this.book_id }}">{{ this.title }}</a></li>
                    {{/each}}
                </ul>
                <div class="d-flex justify-content-between">
                    <form action="/search/{{ letter }}" method="GET">
                        <input type="hidden" name="offset" value="{{ prevOffset }}">
                        <button type="submit" class="btn btn-primary" {{ firstPage }}>Previous</button>
                    </form>
                    <form action="/search/{{ letter }}" method="GET">
                        <input type="hidden" name="offset" value="{{ nextOffset }}">
                        <button type="submit" class="btn btn-primary" {{ lastPage }}>Next</button>
                    </form>
                </div>
                {{else}}
                    <p>No result found.</p>
                {{/if}}
            </div>
        </div>
    </div>
</main>