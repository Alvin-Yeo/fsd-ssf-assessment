<header>
    <div class="container">
        <div class="row mt-3">
            <div class="col d-flex justify-content-between">
                <h1>Book Reviews</h1>
                <div class="align-self-center">
                    <a href="/" class="btn btn-primary">Home</a>
                </div>
            </div>
        </div>
    </div>
</header>

{{#if hasContent}}
<main>
    <div class="container">      
        {{#each reviews}}
        <div class="row mt-3">
            <div class="col">
                <h1>{{ this.book_title }}</h1>
                <h2>by <em>{{ this.book_author }}</em></h2>
                <p>Reviewer: <strong>{{ this.byline }}</strong></p>
                <p>Date: {{ this.publication_dt }}</p>
                <p>{{ this.summary }}</p>
                <a href="{{ this.url }}" target="_blank" class="btn btn-primary float-right">Full Review</a>
            </div>
        </div>
        {{/each}}
    </div>
</main>

<footer>
    <div class="container">
        <div class="row mt-5">
            <div class="col">
                <p>Copyright &copy; 2020 The New York Times Company. All Rights Reserved.</p>
            </div>
        </div>
    </div>
</footer>

{{else}}
<main>
    <div class="container">
        <div class="row mt-3">
            <div class="col">
                <p>Sorry! No review found for the selected book.</p>
            </div>
        </div>
    </div>
</main>
{{/if}}